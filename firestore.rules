rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper to get the user's company ID from their profile.
    function userCompanyId() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
    
    // A user can read and write to their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // A user can get their own company document. Only the owner can update it.
    match /companies/{companyId} {
        allow get: if isSignedIn() && userCompanyId() == companyId;
        allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Rules for all data collections partitioned by companyId.
    match /{collection}/{docId} 
        where collection in ['accounts-db', 'contacts', 'account-products', 'products', 'shipping-locations', 'call-notes'] {
        
      // Allow a user to get a specific document if it belongs to their company.
      allow get: if isSignedIn() && get(path(collection, docId)).data.companyId == userCompanyId();
      
      // Allow a user to query the collection only if they are filtering by their own companyId.
      // This is a common pattern for multi-tenant apps. It enforces that the client-side query
      // MUST include `where('companyId', '==', userCompanyId())`.
      allow list: if isSignedIn() && request.query.get("companyId") == userCompanyId();
      
      // Allow a user to write (create, update, delete) a document if the new/existing
      // data belongs to their company.
      allow write: if isSignedIn() && request.resource.data.companyId == userCompanyId();
    }
  }
}
