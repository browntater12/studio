/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict ownership and access control.
 * Users can only manage their own profile data.
 * Data related to accounts, contacts, products, and shipping locations is publicly readable but
 * can only be created, updated, or deleted with appropriate authorization (not implemented in this prototype).
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only to the owner.
 * - /accounts-db/{accountId}: Sales accounts.
 * - /contacts/{contactId}: Contact information.
 * - /account-products/{accountProductId}: Product notes associated with accounts.
 * - /products/{productId}: Product catalog.
 * - /shipping-locations/{locationId}: Shipping locations for accounts.
 * - /call-notes/{noteId}: Notes about calls made to accounts.
 *
 * Key Security Decisions:
 * - User listing is disabled to prevent enumeration.
 * - Public read access is granted to accounts, contacts, products, and shipping locations to allow
 *   unauthenticated users to view this data, with the assumption that sensitive data is not stored in these collections.
 *   Write access is restricted (not implemented in this prototype).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the requesting user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource and it exists.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {boolean} True if the user is the owner and resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) Signed-in user creates their own profile.
     * @allow (get, update, delete) Signed-in user accesses their own profile.
     * @deny (create) Signed-in user tries to create a profile for another user.
     * @deny (get, update, delete) Signed-in user tries to access another user's profile.
     * @principle Enforces user ownership of profile data.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for accounts database.
     * @path /accounts-db/{accountId}
     * @allow (get, list) Any user can read account information.
     * @deny (create, update, delete) Only authenticated users with specific roles can modify account information (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /accounts-db/{accountId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add authorization check for account creation
      allow update: if false; // TODO: Add authorization check for account updates
      allow delete: if false; // TODO: Add authorization check for account deletion
    }

    /**
     * @description Rules for contacts.
     * @path /contacts/{contactId}
     * @allow (get, list) Any user can read contact information.
     * @deny (create, update, delete) Only authenticated users with specific roles can modify contact information (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /contacts/{contactId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add authorization check for contact creation
      allow update: if false; // TODO: Add authorization check for contact updates
      allow delete: if false; // TODO: Add authorization check for contact deletion
    }

    /**
     * @description Rules for account product notes.
     * @path /account-products/{accountProductId}
     * @allow (get, list) Any user can read account product notes.
     * @deny (create, update, delete) Only authenticated users with specific roles can modify account product notes (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /account-products/{accountProductId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add authorization check for account product note creation
      allow update: if false; // TODO: Add authorization check for account product note updates
      allow delete: if false; // TODO: Add authorization check for account product note deletion
    }

    /**
     * @description Rules for products.
     * @path /products/{productId}
     * @allow (get, list) Any user can read product information.
     * @deny (create, update, delete) Only authenticated users with specific roles can modify product information (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add authorization check for product creation
      allow update: if false; // TODO: Add authorization check for product updates
      allow delete: if false; // TODO: Add authorization check for product deletion
    }

    /**
     * @description Rules for shipping locations.
     * @path /shipping-locations/{locationId}
     * @allow (get, list) Any user can read shipping location information.
     * @deny (create, update, delete) Only authenticated users with specific roles can modify shipping location information (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /shipping-locations/{locationId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add authorization check for shipping location creation
      allow update: if false; // TODO: Add authorization check for shipping location updates
      allow delete: if false; // TODO: Add authorization check for shipping location deletion
    }

    /**
     * @description Rules for call notes.
     * @path /call-notes/{noteId}
     * @allow (create) Signed-in user creates a call note.
     * @allow (get, list) Any user can read call note information.
     * @deny (update, delete) Only authenticated users with specific roles can modify/delete call note information (not implemented).
     * @principle Public read access with restricted write access.
     */
    match /call-notes/{noteId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false; // TODO: Add authorization check for call note updates
      allow delete: if false; // TODO: Add authorization check for call note deletion
    }
  }
}