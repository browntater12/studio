rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      // On create, a companyId must exist and not be empty.
      // On update, the companyId cannot be changed.
      allow write: if isSignedIn() && request.auth.uid == userId &&
                   ( (request.resource.data.companyId == resource.data.companyId) || 
                     (!exists(/databases/$(database)/documents/users/$(userId)) && request.resource.data.companyId != null) );
    }
    
    match /companies/{companyId} {
      allow get: if isSignedIn() && getUserCompanyId() == companyId;
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /{collection}/{docId} 
        where collection in ['accounts-db', 'contacts', 'account-products', 'products', 'shipping-locations', 'call-notes'] {
        
      // Rule for reading a single document.
      allow get: if isSignedIn() && getUserCompanyId() == resource.data.companyId;

      // Rule for querying a collection. The client query MUST contain a where() clause
      // that filters by the user's companyId.
      allow list: if isSignedIn() && request.query.filters.size() > 0 && request.query.filters[0].field.stringValue == 'companyId' && request.query.filters[0].op.stringValue == '==' && request.query.filters[0].value.stringValue == getUserCompanyId();
      
      // Rule for creating, updating, or deleting a document.
      allow write: if isSignedIn() && request.resource.data.companyId == getUserCompanyId();
    }
  }
}
