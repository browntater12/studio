rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper to get the user's company ID from their profile.
    function userCompanyId() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
    
    // A user can read and write to their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // A user can get their own company document. Only the owner can update it.
    match /companies/{companyId} {
        allow get: if isSignedIn() && userCompanyId() == companyId;
        allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Rules for all data collections partitioned by companyId.
    match /{collection}/{docId} 
        where collection in ['accounts-db', 'contacts', 'account-products', 'products', 'shipping-locations', 'call-notes'] {
        
      // Allow a user to read/write documents if the document's companyId
      // matches the companyId from their own user profile.
      allow read, write: if isSignedIn() && userCompanyId() == request.resource.data.companyId;
    }
  }
}
