
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function userCompanyId() {
        return getUserProfile(request.auth.uid).companyId;
    }
    
    match /users/{userId} {
      allow read, update, create: if isOwner(userId);
      allow list, delete: if false;
    }
    
    match /companies/{companyId} {
        allow get: if isSignedIn() && userCompanyId() == companyId;
        allow create: if false;
        allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
        allow list, delete: if false;
    }

    match /{collection}/{docId} 
        where collection in ['accounts-db', 'contacts', 'account-products', 'products', 'shipping-locations', 'call-notes'] {
        
        allow read: if isSignedIn() && (
            (exists(/databases/$(database)/documents/$(collection)/$(docId)) && resource.data.companyId == userCompanyId()) ||
            (!exists(/databases/$(database)/documents/$(collection)/$(docId)))
        );

        allow write: if isSignedIn() && 
            (request.resource.data.companyId == userCompanyId());
    }
  }
}
