/**
 * @fileoverview Firestore Security Rules for Prototyping.
 *
 * Core Philosophy:
 * This ruleset prioritizes strict authorization and assumes that all data should be private by default.
 * It enforces user-based ownership for user profiles and allows public read access to products and call notes,
 * but restricts modifications to authorized users.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, accessible only to the user themselves.
 * - /accounts-db/{accountId}: Stores sales accounts, write-access is denied.
 * - /contacts/{contactId}: Stores contacts, write-access is denied.
 * - /account-products/{accountProductId}: Stores account-product notes, write-access is denied.
 * - /products/{productId}: Stores product information, read access public, write access denied.
 * - /call-notes/{callNoteId}: Stores call notes, read access public, write access is denied.
 *
 * Key Security Decisions:
 * - User profiles are strictly private and only accessible to the owner.
 * - Listing of users is disallowed.
 * - Products are publicly readable but not writable through the client.
 * - Accounts, contacts and account-products are readable but not writable through the client.
 * - Call Notes are publicly readable, but not writable through the client.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profile data, allowing only the owner to read and write.
     * @path /users/{userId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get) if request.auth.uid == userId
     * @deny (list)
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      // Users can only read their own profile.
      allow get: if isOwner(userId);
      allow list: if false;

      // Users can only create, update, and delete their own profile.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the accounts-db collection, write access is denied.
     * @path /accounts-db/{accountId}
     * @allow (get, list) if true
     * @deny (create, update, delete)
     * @principle Data is read-only for clients.
     */
    match /accounts-db/{accountId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the contacts collection, write access is denied.
     * @path /contacts/{contactId}
     * @allow (get, list) if true
     * @deny (create, update, delete)
     * @principle Data is read-only for clients.
     */
    match /contacts/{contactId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the account-products collection, write access is denied.
     * @path /account-products/{accountProductId}
     * @allow (get, list) if true
     * @deny (create, update, delete)
     * @principle Data is read-only for clients.
     */
    match /account-products/{accountProductId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to products, but restricts modifications.
     * @path /products/{productId}
     * @allow (get, list) if true
     * @deny (create, update, delete)
     * @principle Allows public read access.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to call notes, but restricts modifications.
     * @path /call-notes/{callNoteId}
     * @allow (get, list) if true
     * @deny (create, update, delete)
     * @principle Allows public read access.
     */
    match /call-notes/{callNoteId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }


    // ---- Helper functions ----

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @return {bool} True if the request is made by the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the existing owner of the resource and the resource exists.
     * @param {string} userId - The user ID to compare against the resource data's owner ID and the request's auth UID.
     * @return {bool} True if the request is made by the existing owner, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }
  }
}