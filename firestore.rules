/**
 * @fileoverview Firestore Security Rules for Sales App.
 *
 * Core Philosophy:
 * This ruleset prioritizes user data protection and enforces strict ownership for user profiles.
 * Public read access is granted where appropriate, such as for product catalogs.
 *
 * Data Structure:
 * - User profiles are stored under `/users/{userId}`.
 * - Sales accounts are stored under `/accounts-db/{accountId}`.
 * - Contacts are stored under `/contacts/{contactId}`.
 * - Account product notes are stored under `/account-products/{accountProductId}`.
 * - Products are stored under `/products/{productId}`.
 * - Call notes are stored under `/call-notes/{callNoteId}`.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy.
 * - Accounts, contacts, account-product notes, products, and call notes are publicly readable, but write access is restricted.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles, ensuring only the owner can read or write.
     * @path /users/{userId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get, list) if request.auth.uid == userId
     * @deny (create, update, delete) if request.auth.uid != userId
     * @deny (get, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows public read access to accounts, but restricts writes.
     * @path /accounts-db/{accountId}
     * @allow (get, list) if true
     * @allow (create) if request.auth != null
     * @allow (update, delete) if false // TODO: Add owner validation once the schema is updated with an ownership field.
     * @deny (create) if request.auth == null
     * @principle Allows public reads with restricted writes.
     */
    match /accounts-db/{accountId} {
      allow get: if true;
      allow list: if true;
      allow create: if request.auth != null;
      allow update: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Allows public read access to contacts, but restricts writes.
     * @path /contacts/{contactId}
     * @allow (get, list) if true
     * @allow (create) if request.auth != null
     * @allow (update, delete) if false // TODO: Add owner validation once the schema is updated with an ownership field.
     * @deny (create) if request.auth == null
     * @principle Allows public reads with restricted writes.
     */
