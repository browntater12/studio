
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Get the user's profile data from the /users collection
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the incoming document's companyId matches the user's companyId
    function isSameCompany(companyId) {
      let userProfile = getUserProfile();
      return userProfile.companyId == companyId;
    }

    // Check if the existing document's companyId matches the user's companyId
    function isSameCompanyForExistingDoc() {
        let userProfile = getUserProfile();
        return resource.data.companyId == userProfile.companyId;
    }

    match /users/{userId} {
      // Users can read their own profile to get their companyId
      allow get: if isOwner(userId);
      // Logged-in users can create their own profile.
      // This is handled by the createUserAndCompany server-side function, but we add a rule for safety.
      allow create: if isOwner(userId);
      // Users can update their own profile
      allow update: if isOwner(userId);
      // No one can list all users or delete profiles for security.
      allow list, delete: if false;
    }
    
    match /companies/{companyId} {
        // Only the user belonging to the company can read the company doc
        allow get: if isSignedIn() && isSameCompany(companyId);
        // Creation is handled by the server-side function. No direct client creation.
        allow create: if false;
        // Only the owner can update the company (e.g. name)
        allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
        // No one can list all companies or delete them.
        allow list, delete: if false;
    }

    // Generic rules for company-isolated data
    function companyDataRules() {
      return {
        // Read is allowed if the user is signed in. The query must filter by companyId.
        allow read: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId,
        // Create is allowed if the new document's companyId matches the user's.
        allow create: if isSignedIn() && isSameCompany(request.resource.data.companyId),
        // Update is allowed if both the existing and new data belong to the user's company.
        allow update: if isSignedIn() && isSameCompanyForExistingDoc() && isSameCompany(request.resource.data.companyId),
        // Delete is allowed if the document belongs to the user's company.
        allow delete: if isSignedIn() && isSameCompanyForExistingDoc()
      };
    }

    match /accounts-db/{accountId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
    match /contacts/{contactId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
    match /account-products/{accountProductId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
    match /products/{productId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
    match /shipping-locations/{locationId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
    match /call-notes/{callNoteId} {
        allow read: if isSignedIn() && isSameCompanyForExistingDoc();
        allow list: if isSignedIn() && request.query.get('companyId') == getUserProfile().companyId;
        allow write: if isSignedIn() && isSameCompany(request.resource.data.companyId);
    }
  }
}
