rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    match /users/{userId} {
      // A user can read and write their own profile document.
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /companies/{companyId} {
      // A user can read their own company document.
      allow get: if isSignedIn() && getUserCompanyId() == companyId;
      // Only the owner of the company can update it.
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Rules for all data collections partitioned by companyId.
    match /{collection}/{docId} 
        where collection in ['accounts-db', 'contacts', 'account-products', 'products', 'shipping-locations', 'call-notes'] {
        
      // For single document reads (get), the doc's companyId must match the user's companyId.
      // For queries (list), the query MUST include a `where('companyId', '==', getUserCompanyId())` clause.
      // Firestore enforces this automatically based on the rule below.
      allow read: if isSignedIn() && getUserCompanyId() == resource.data.companyId;
      
      // For write operations, the companyId of the data being written must match the user's companyId.
      allow write: if isSignedIn() && request.resource.data.companyId == getUserCompanyId();
    }
  }
}
